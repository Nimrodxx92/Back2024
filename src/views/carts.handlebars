<h2>Lista de Carritos</h2>

{{#if status}}
  <div>
    <p>Status: {{status}}</p>
  </div>
{{/if}}

{{#if payload.length}}
  <ul>
    {{#each payload}}
      <li>
        <h3>Carrito ID: {{_id}}</h3>
        {{#if products.length}}
          <ul>
            {{#each products}}
              <li>
                <p>Producto ID: {{product._id}}</p>
                <p>Título: {{product.title}}</p>
                <p>Precio: {{product.price}}</p>
                <p>Cantidad: {{quantity}}</p>

                <!-- Botón para eliminar el producto -->

                <button
                  type="button"
                  onclick="deleteProduct('{{_id}}', '{{product._id}}')"
                >Eliminar producto</button>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p>El carrito está vacío.</p>
        {{/if}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No hay carritos disponibles.</p>
{{/if}}

<a href="/productsDB">
  <button>Volver a los productos</button>
</a>

<script src="/js/deleteCart.js"></script>