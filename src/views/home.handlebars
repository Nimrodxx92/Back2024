<h2>Lista de productos</h2>

{{#if status}}
  <div>
    <p>{{status}}</p>
    <p>{{payload}}</p>
  </div>
{{/if}}

{{#if totalPages}}
  <p>Total de páginas: {{totalPages}}</p>
{{/if}}

<ul>
  {{#each Products}}
    <li>
      <h3>{{this.title}}</h3>
      <p>Precio: {{this.price}}</p>
      <p>{{this.description}}</p>
      <p>Categoría: {{this.category}}</p>
      <p>Stock: {{this.stock}}</p>

      <a href="/productsDB/{{this._id}}">
        <button>Ver Detalles</button>
      </a>

      <button onclick="addToCart('{{this._id}}')">
        Agregar al Carrito
      </button>
    </li>
  {{/each}}
</ul>

<div>
  {{#if prevLink}}
    <a href="{{prevLink}}"><button type="button">Página anterior</button></a>
  {{/if}}

  {{#if nextLink}}
    <a href="{{nextLink}}"><button type="button">Página siguiente</button></a>
  {{/if}}
</div>

<a href="/cartsDB/{{this._id}}">
  <button>Ver carrito</button>
</a>

<script src="/js/addToCart.js"></script>